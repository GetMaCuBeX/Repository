<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2.3" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2_3.xsd">
  <persistence-unit name="booksreservation" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.mcbx.jpa.eclipse.entity.Books</class>
    <class>com.mcbx.jpa.eclipse.entity.Publishers</class>
    <class>com.mcbx.jpa.eclipse.entity.Booksauthors</class>
    <class>com.mcbx.jpa.eclipse.entity.Authors</class>
    <class>com.mcbx.jpa.eclipse.entity.Preferences</class>
    <class>com.mcbx.jpa.eclipse.entity.Booksimage</class>
    <class>com.mcbx.jpa.eclipse.entity.Journals</class>
    <class>com.mcbx.jpa.eclipse.entity.Bookspublishers</class>
    <class>com.mcbx.jpa.eclipse.entity.Subjects</class>
    <class>com.mcbx.jpa.eclipse.entity.Logsborrowedbooks</class>
    <class>com.mcbx.jpa.eclipse.entity.Category</class>
    <class>com.mcbx.jpa.eclipse.entity.Membersimage</class>
    <class>com.mcbx.jpa.eclipse.entity.Bookssubjects</class>
    <class>com.mcbx.jpa.eclipse.entity.Members</class>
    <class>com.mcbx.jpa.eclipse.entity.Reserve</class>
    <class>com.mcbx.jpa.eclipse.entity.Borrow</class>
    <shared-cache-mode>ALL</shared-cache-mode>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/booksreservation"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
