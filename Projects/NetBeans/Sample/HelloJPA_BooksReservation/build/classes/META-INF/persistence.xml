<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="booksreservation" transaction-type="RESOURCE_LOCAL">
    <class>com.mcbx.main.entity.Booksauthors</class>
    <class>com.mcbx.main.entity.Books</class>
    <class>com.mcbx.main.entity.Journals</class>
    <class>com.mcbx.main.entity.Publishers</class>
    <class>com.mcbx.main.entity.Authors</class>
    <class>com.mcbx.main.entity.Members</class>
    <class>com.mcbx.main.entity.Borrow</class>
    <class>com.mcbx.main.entity.Preferences</class>
    <class>com.mcbx.main.entity.Subjects</class>
    <class>com.mcbx.main.entity.Logsborrowedbooks</class>
    <class>com.mcbx.main.entity.Membersimage</class>
    <class>com.mcbx.main.entity.Booksimage</class>
    <class>com.mcbx.main.entity.Reserve</class>
    <class>com.mcbx.main.entity.Bookspublishers</class>
    <class>com.mcbx.main.entity.Bookssubjects</class>
    <class>com.mcbx.main.entity.Category</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/booksreservation"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
